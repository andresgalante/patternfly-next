{{#> login-page}}

  {{#> background-image}}{{/background-image}}

  {{#> login}}

    {{! Logo and some text }}
    {{#> login-header}}
      {{#> login-header-brand}}
        {{#> brand brand--src="/assets/images/pf_logo_color.svg" brand--alt="Patternfly Logo"}}{{/brand}}
      {{/login-header-brand}}
      {{#> content}}
        <p>This is placeholder text only. Use this area to place any information or introductory message about your application that may be relevant to users.</p>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Numquam saepe, similique repudiandae, cupiditate nobis ab natus porro voluptatum at adipisci aspernatur rerum qui veritatis quod aut. Excepturi quia eos expedita!</p>
      {{/ content}}
    {{/login-header}}

    {{! LoginBox and form }}
    {{#> login-main}}

      {{#> login-box}}
      
        {{#> login-box-header}}
          {{#> title titleType="h1" pf-c-title--Modifier="pf-m-3xl"}}
            Sign in to your account
          {{/title}}
        
          {{!-- 
          {{#> dropdown id="dropdown-example-collapsed" pf-c-dropdown--HasToggleIcon="true"}}
            English
          {{/dropdown}}
          <span>Need an account? <a href="https://google.com">Sign up</a>.</span> --}}
        {{/login-box-header}}
                {{#> login-box-body}}
         {{!-- FORM GOES HERE

         Lorem ipsum dolor sit amet consectetur, adipisicing elit. Dolorem suscipit deleniti vitae maiores corporis beatae perspiciatis, a sit quod, doloribus iste voluptas laborum accusantium adipisci accusamus quae sunt. At, voluptatibus? --}}
          {{! Login form inputs }}
          {{#> form}}

            {{! Username }}
            {{#> form-group}}
              {{#> form-label for="textInput1"}}Username{{/form-label}}
              {{#> form-controls controlType="input" input="true" type="text" name="inputName1" id="textInput1" pf-c-form-control--modifier="pf-m-form-control-alt"}}{{/form-controls}}
            {{/form-group}}

            {{! Password }}
            {{#> form-group}}
              {{#> form-label for="textInput2"}}Password{{/form-label}}
              {{#> form-controls controlType="input" input="true" type="text" name="inputName2" id="textInput2" pf-c-form-control--modifier="pf-m-form-control-alt"}}{{/form-controls}}
            {{/form-group}}
            
  
              
{{#> form-group pf-c-form__group--modifier="pf-m-inline pf-u-mt-xl"}}
              {{#> button btnClass="pf-m-primary"}}
                  Sign In
              {{/button}}
              
              {{#> form-label for="checkbox1"}}
                {{#> check pf-c-check-type="checkbox" name="checkbox1" id="checkbox1"}}{{/check}}
                    Keep me signed in for 30 days.
              {{/form-label}}
              {{/form-group}}

          {{/form}}

        {{/login-box-body}}

        {{#> login-box-footer}}
        FOOTER
          {{!-- <h3 class="pf-u-mb-xl">Or log in with</h3>
          {{#> grid grid--modifiers="pf-m-gutter"}}
            {{#> grid-item grid-item--modifiers="pf-m-4-col"}}
              <img src="/assets/images/logo-google2.svg">
              <span>Google</span>
            {{/grid-item}}
            {{#> grid-item grid-item--modifiers="pf-m-4-col"}}
              <img src="/assets/images/logo-github.svg">
              <span>GitHub</span>
            {{/grid-item}}
            {{#> grid-item grid-item--modifiers="pf-m-4-col"}}
              <img src="/assets/images/logo-dropbox.svg">
              <span>Dropbox</span>
            {{/grid-item}}
            {{#> grid-item grid-item--modifiers="pf-m-4-col"}}
              <img src="/assets/images/logo-facebook.svg">
              <span>Facebook</span>
            {{/grid-item}}
            {{#> grid-item grid-item--modifiers="pf-m-4-col"}}
              <img src="/assets/images/logo-gitlab.svg">
              <span>GitLab</span>
            {{/grid-item}}
            {{#> grid-item grid-item--modifiers="pf-m-4-col"}}
              <a href="https://google.com">More...</a>
            {{/grid-item}}
          {{/grid}} --}}
        {{/login-box-footer}}

      {{/login-box}}

    {{/login-main}}

    {{! Footer links }}
    {{#> login-footer}}
      {{#> display display--type="flex" display--modifier="pf-u-flex-row"}}
        <a href="https://google.com">Terms of Use</a>
        <a href="https://google.com">Help</a>
        <a href="https://google.com">Privacy Policy</a>
      {{/display}}
    {{/login-footer}}

  {{/login}}

{{/login-page}}
